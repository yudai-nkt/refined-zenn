{
  "manifest_version": 3,
  "name": "Refined Zenn",
  "description": "Zennの機能やUIの一部を変更するChrome拡張機能です．",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": ["https://zenn.dev/*"],
      "js": ["extension/content-scripts/sticky-header/index.js"]
    },
    {
      "matches": ["https://zenn.dev/*/articles/*"],
      "js": ["extension/content-scripts/footnote-tooltip/index.js"]
    }
  ],
  "options_ui": {
    "page": "extension/options-ui/index.html",
    "browser_style": true
  },
  "permissions": ["storage"]
}
